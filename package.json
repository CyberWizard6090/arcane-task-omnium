{
  "name": "arcane-task-omnium",
  "productName": "Arcane Task Omnium",
  "version": "1.0.0",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "dev:renderer": "vite --config vite.config.ts",
    "dev:preload": "tsc -p tsconfig.preload.json --watch",
    "dev:electron": "concurrently \"npm run dev:renderer\" \"npm run dev:preload\" \"wait-on dist/preload.js && wait-on http://localhost:5173 && cross-env NODE_ENV=development electron -r ts-node/esm main/main.ts\"",
    "build": "vite build --config vite.config.mjs && npx tsc -p tsconfig.main.json",
    "start": "electron .",
    "lint": "eslint . --ext .ts,.vue,.js",
    "lint:fix": "eslint . --ext .ts,.vue,.js --fix",
    "format": "prettier --write ."
  },
  "dependencies": {
    "pinia": "^3.0.3",
    "uuid": "^13.0.0",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@types/uuid": "^10.0.0",
    "@types/vue-router": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.4.0",
    "electron-reloader": "^1.2.3",
    "esbuild": "^0.25.12",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-vue": "^10.5.1",
    "globals": "^16.5.0",
    "prettier": "^3.6.2",
    "sass": "^1.93.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "wait-on": "^9.0.1"
  }
}
